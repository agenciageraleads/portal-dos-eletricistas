// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// üë§ Usu√°rios (Eletricistas & Admins)
// --------------------------------------

enum Role {
  ADMIN
  ELETRICISTA
  CLIENTE
}

enum UserStatus {
  PENDING
  ACTIVE
  BLOCKED
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String     // Ser√° hasheada
  name      String
  business_name String? // Raz√£o Social / Nome Fantasia (v1.2.0)
  role      Role       @default(ELETRICISTA)
  status    UserStatus @default(PENDING)
  cpf_cnpj  String?
  phone     String?
  
  // LGPD - Consentimento
  terms_accepted_at DateTime?
  bio       String?
  logo_url  String?
  pix_key   String?
  
  // Password Reset
  reset_token          String?
  reset_token_expires  DateTime?
  
  // Dados de Pagamento (Split)
  // Armazena o ID do recebedor no Gateway (Pagar.me/Asaas)
  gateway_recipient_id String?

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  budgets   Budget[]
  
  @@map("users")
}

// --------------------------------------
// üì¶ Cat√°logo de Produtos (Sync Sankhya)
// --------------------------------------

model Product {
  id            String   @id @default(uuid())
  sankhya_code  Int      @unique // C√≥digo original no ERP
  name          String
  description   String?
  price         Decimal  @db.Decimal(10, 2)
  unit          String?  // UN, M, CX
  image_url     String?
  category      String?
  brand         String?
  
  // Controle de Estoque Simplificado
  is_available  Boolean  @default(true)
  
  // Especifica√ß√µes T√©cnicas (Novo v1.1.0)
  specs         Json?    // { "amperage": "32A", "curve": "C", "voltage": "750V" }

  // Popularidade (Sankhya Calculated)
  popularity_index Decimal @default(0) @map("INDICE_POPULARIDADE") @db.Decimal(10, 4)

  updatedAt     DateTime @updatedAt  // Para saber quando foi a √∫ltima sync

  budgetItems   BudgetItem[]
  feedbacks     Feedback[]

  @@map("products")
}

// --------------------------------------
// üîç Buscas Falhas (Analytics) v1.1.0
// --------------------------------------

model FailedSearch {
  id        String   @id @default(uuid())
  query     String
  userId    String?
  createdAt DateTime @default(now())
  
  @@map("failed_searches")
}

// --------------------------------------
// üìù Or√ßamentos (Carrinho T√©cnico)
// --------------------------------------

enum BudgetStatus {
  DRAFT      // Em rascunho
  SHARED     // Enviado ao cliente
  APPROVED   // Cliente aceitou
  CONVERTED  // Virou Pedido (Pago)
  EXPIRED    // Passou do prazo
}

model Budget {
  id              String       @id @default(uuid())
  
  // Relacionamentos
  userId          String
  user            User         @relation(fields: [userId], references: [id])
  
  client_name     String?
  client_phone    String?
  
  status          BudgetStatus @default(DRAFT)
  expiresAt       DateTime?

  // Totais (Calculados)
  total_materials Decimal      @default(0) @db.Decimal(10, 2)
  total_labor     Decimal      @default(0) @db.Decimal(10, 2) // M√£o de obra (Split)
  labor_description String?    // Descri√ß√£o justificativa do servi√ßo (Novo v1.1.0)
  total_price     Decimal      @default(0) @db.Decimal(10, 2)

  // Observa√ß√µes e Configura√ß√µes (Novo v1.2.0)
  notes           String?      // Observa√ß√µes gerais, condi√ß√µes de pagamento, prazos
  show_unit_prices Boolean     @default(true)  // Exibir pre√ßos unit√°rios no PDF?
  show_labor_total Boolean     @default(true)  // Exibir total de m√£o de obra separado?

  items           BudgetItem[]
  order           Order?
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@map("budgets")
}

model BudgetItem {
  id        String   @id @default(uuid())
  
  budgetId  String
  budget    Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  
  productId String?
  product   Product? @relation(fields: [productId], references: [id])

  // Campos para Itens Manuais / Externos (v1.3.0)
  is_external       Boolean  @default(false)
  custom_name       String?
  custom_photo_url  String?
  suggested_source  String?

  quantity  Int
  price     Decimal  @db.Decimal(10, 2) // Pre√ßo "congelado" no momento do or√ßamento

  @@map("budget_items")
}

// --------------------------------------
// üí≥ Pedidos (P√≥s-Pagamento)
// --------------------------------------

enum OrderStatus {
  PENDING_SYNC  // Pago, mas n√£o enviado ao Sankhya
  SYNCED        // Enviado ao Sankhya com sucesso
  ERROR_SYNC    // Erro ao enviar
}

model Order {
  id                    String      @id @default(uuid())
  
  budgetId              String      @unique
  budget                Budget      @relation(fields: [budgetId], references: [id])

  gateway_id            String?     // ID da transa√ß√£o no Gateway
  sankhya_order_id      Int?        // ID do pedido criado no Sankhya
  
  status                OrderStatus @default(PENDING_SYNC)
  
  paidAt                DateTime    @default(now())

  @@map("orders")
}

// --------------------------------------
// üì¢ Feedback & Report
// --------------------------------------

enum FeedbackType {
  GENERAL
  PRODUCT_REPORT
}

model Feedback {
  id        String       @id @default(uuid())
  type      FeedbackType
  message   String
  productId String?      // Opcional: s√≥ se for report de produto
  product   Product?     @relation(fields: [productId], references: [id])
  
  userEmail String?      // Opcional: se quisermos saber quem mandou (futuro)
  
  createdAt DateTime     @default(now())
  
  @@map("feedbacks")
}
