generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String     @id @default(uuid())
  email                String     @unique
  password             String
  name                 String
  role                 Role       @default(ELETRICISTA)
  status               UserStatus @default(PENDING)
  cpf_cnpj             String?
  phone                String?
  gateway_recipient_id String?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
  bio                  String?
  logo_url             String?
  pix_key              String?
  reset_token          String?
  reset_token_expires  DateTime?
  terms_accepted_at    DateTime?
  business_name        String?
  budgets              Budget[]

  @@map("users")
}

model Product {
  id               String       @id @default(uuid())
  sankhya_code     Int          @unique
  name             String
  description      String?
  price            Decimal      @db.Decimal(10, 2)
  unit             String?
  image_url        String?
  category         String?
  brand            String?
  is_available     Boolean      @default(true)
  updatedAt        DateTime     @updatedAt
  specs            Json?
  popularity_index Decimal      @default(0) @map("INDICE_POPULARIDADE") @db.Decimal(10, 4)
  budgetItems      BudgetItem[]
  feedbacks        Feedback[]

  @@map("products")
}

model FailedSearch {
  id        String   @id @default(uuid())
  query     String
  userId    String?
  createdAt DateTime @default(now())

  @@map("failed_searches")
}

model Budget {
  id                String       @id @default(uuid())
  userId            String
  client_name       String?
  client_phone      String?
  status            BudgetStatus @default(DRAFT)
  expiresAt         DateTime?
  total_materials   Decimal      @default(0) @db.Decimal(10, 2)
  total_labor       Decimal      @default(0) @db.Decimal(10, 2)
  total_price       Decimal      @default(0) @db.Decimal(10, 2)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  labor_description String?
  notes             String?
  show_labor_total  Boolean      @default(true)
  show_unit_prices  Boolean      @default(true)
  items             BudgetItem[]
  user              User         @relation(fields: [userId], references: [id])
  order             Order?

  @@map("budgets")
}

model BudgetItem {
  id               String   @id @default(uuid())
  budgetId         String
  productId        String?
  quantity         Int
  price            Decimal  @db.Decimal(10, 2)
  custom_name      String?
  custom_photo_url String?
  is_external      Boolean  @default(false)
  suggested_source String?
  budget           Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  product          Product? @relation(fields: [productId], references: [id])

  @@map("budget_items")
}

model Order {
  id               String      @id @default(uuid())
  budgetId         String      @unique
  gateway_id       String?
  sankhya_order_id Int?
  status           OrderStatus @default(PENDING_SYNC)
  paidAt           DateTime    @default(now())
  budget           Budget      @relation(fields: [budgetId], references: [id])

  @@map("orders")
}

model Feedback {
  id        String       @id @default(uuid())
  type      FeedbackType
  message   String
  productId String?
  userEmail String?
  createdAt DateTime     @default(now())
  product   Product?     @relation(fields: [productId], references: [id])

  @@map("feedbacks")
}

enum Role {
  ADMIN
  ELETRICISTA
  CLIENTE
}

enum UserStatus {
  PENDING
  ACTIVE
  BLOCKED
}

enum BudgetStatus {
  DRAFT
  SHARED
  APPROVED
  CONVERTED
  EXPIRED
}

enum OrderStatus {
  PENDING_SYNC
  SYNCED
  ERROR_SYNC
}

enum FeedbackType {
  GENERAL
  PRODUCT_REPORT
}
