generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String     @id @default(uuid())
  email                String     @unique
  password             String
  name                 String
  role                 Role       @default(ELETRICISTA)
  status               UserStatus @default(PENDING)
  cpf_cnpj             String?
  phone                String?
  gateway_recipient_id String?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
  bio                  String?
  logo_url             String?
  pix_key              String?
  reset_token          String?
  reset_token_expires  DateTime?
  terms_accepted_at    DateTime?
  business_name        String?
  city                 String?
  state                String?
  isAvailableForWork   Boolean    @default(false)
  budgets              Budget[]
  ai_corrections       AiMatchFeedback[]
  services             ServiceListing[]
  suggestions          ServiceSuggestion[]
  feedbacks            Feedback[]
  notifications        Notification[]
  push_subscriptions   PushSubscription[]

  chatMessages       ChatMessage[]
  chatSessions       ChatSession[]

  @@map("users")
}

model ChatSession {
  id        String   @id @default(uuid())
  userId    String
  title     String   @default("Nova Conversa")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User          @relation(fields: [userId], references: [id])
  messages  ChatMessage[]

  @@map("chat_sessions")
  @@index([userId])
}

model ChatMessage {
  id        String   @id @default(uuid())
  userId    String
  sessionId String?
  role      String   @default("user") // 'user', 'assistant' or 'system'
  content   String   @db.Text
  createdAt DateTime @default(now())

  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  session   ChatSession? @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
  @@index([userId])
  @@index([sessionId])
}

model Product {
  id               String       @id @default(uuid())
  sankhya_code     Int          @unique
  name             String
  description      String?
  price            Decimal      @db.Decimal(10, 2)
  unit             String?
  image_url        String?
  category         String?
  brand            String?
  is_available     Boolean      @default(true)
  updatedAt        DateTime     @updatedAt
  specs            Json?
  popularity_index Decimal      @default(0) @map("INDICE_POPULARIDADE") @db.Decimal(10, 4)
  type             ProductType  @default(MATERIAL)
  budgetItems      BudgetItem[]
  feedbacks        Feedback[]

  @@map("products")
}

enum ProductType {
  MATERIAL
  SERVICE
}

model FailedSearch {
  id        String   @id @default(uuid())
  query     String
  userId    String?
  createdAt DateTime @default(now())

  @@map("failed_searches")
}

model Budget {
  id                String       @id @default(uuid())
  userId            String
  client_name       String?
  client_phone      String?
  status            BudgetStatus @default(DRAFT)
  expiresAt         DateTime?
  total_materials   Decimal      @default(0) @db.Decimal(10, 2)
  total_labor       Decimal      @default(0) @db.Decimal(10, 2)
  total_price       Decimal      @default(0) @db.Decimal(10, 2)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  labor_description String?
  notes             String?
  show_labor_total  Boolean      @default(true)
  show_unit_prices  Boolean      @default(true)
  items             BudgetItem[]
  user              User         @relation(fields: [userId], references: [id])
  order             Order?

  @@map("budgets")
}

model BudgetItem {
  id               String   @id @default(uuid())
  budgetId         String
  productId        String?
  quantity         Int
  price            Decimal  @db.Decimal(10, 2)
  custom_name      String?
  custom_photo_url String?
  is_external      Boolean  @default(false)
  suggested_source String?
  budget           Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  product          Product? @relation(fields: [productId], references: [id])

  @@map("budget_items")
}

model Order {
  id               String      @id @default(uuid())
  budgetId         String      @unique
  gateway_id       String?
  sankhya_order_id Int?
  status           OrderStatus @default(PENDING_SYNC)
  paidAt           DateTime    @default(now())
  budget           Budget      @relation(fields: [budgetId], references: [id])

  @@map("orders")
}

model Feedback {
  id        String       @id @default(uuid())
  type      FeedbackType
  message   String
  productId String?
  userEmail String?
  reply     String?
  repliedAt DateTime?
  createdAt DateTime     @default(now())
  product   Product?     @relation(fields: [productId], references: [id])
  userId    String?
  user      User?        @relation(fields: [userId], references: [id])

  @@map("feedbacks")
}

enum Role {
  ADMIN
  ELETRICISTA
  CLIENTE
}

enum UserStatus {
  PENDING
  ACTIVE
  BLOCKED
}

enum BudgetStatus {
  DRAFT
  SHARED
  APPROVED
  CONVERTED
  EXPIRED
}

enum OrderStatus {
  PENDING_SYNC
  SYNCED
  ERROR_SYNC
}

enum FeedbackType {
  GENERAL
  PRODUCT_REPORT
}

model AiMatchFeedback {
  id              String   @id @default(uuid())
  original_text   String   // Termo buscado, normalizado
  ai_model        String   // ex: "gpt-4o-mini"
  suggested_pid   String?  // ID do produto sugerido
  correct_pid     String?  // ID do produto correto (selecionado pelo user)
  correction_type String   // 'REJECTED' (só removeu) ou 'FIXED' (substituiu)
  createdAt       DateTime @default(now())
  user            User?    @relation(fields: [userId], references: [id])
  userId          String?

  @@index([original_text])
  @@map("ai_match_feedbacks")
}

model ServiceListing {
  id          String   @id @default(uuid())
  title       String   // Ex: "Preciso de Eletricista"
  description String
  price       Decimal? @db.Decimal(10, 2)
  city        String?
  state       String?  // UF
  date        DateTime // Data do serviço
  
  whatsapp    String?
  
  type        ServiceType   @default(REQUEST) // REQUEST = Preciso de ajuda, OFFER = Estou disponível
  status      ServiceStatus @default(OPEN)
  
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt // Added missing field

  @@map("service_listings")
}

model ServiceSuggestion {
  id          String   @id @default(uuid())
  name        String
  category    String?
  description String?
  suggestedBy String?
  user        User?    @relation(fields: [suggestedBy], references: [id])
  createdAt   DateTime @default(now())

  @@map("service_suggestions")
}

model SearchSynonym {
  id        String   @id @default(uuid())
  term      String   @unique // Termo principal ex: "PAINEL"
  synonyms  String[] // Sinônimos ex: ["LUMINARIA", "PLAFON"]
  approved  Boolean  @default(false)
  
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("search_synonyms")
}

enum ServiceStatus {
  OPEN
  FILLED
  CANCELLED
}

enum ServiceType {
  REQUEST // Contratante (Preciso de obra/ajuda)
  OFFER   // Profissional (Estou livre para diária)
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  read      Boolean  @default(false)
  type      String   // 'NEW_SERVICE', 'BUDGET_UPDATE', 'SYSTEM'
  link      String?  // Link for action
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  @@map("notifications")
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String
  endpoint  String
  keys      Json     // p256dh, auth
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  
  @@map("push_subscriptions")
}
